.full-height
  height 100%
  
.full-width
  width 100%

.valing
  height    100%
  display table
  > div:first-child
    display table-cell
    vertical-align middle
    
@media (max-width: 767px) 
  .xs-full-width
    width 100%
    
clearfix() 
  &:before,
  &:after 
    content ""
    display table
  &:after 
    clear both

html, body
  size     100%
  margin   0
  padding  0 
  // overflow hidden
  position relative

//  FADE WITH ELLIPSIS WAY
multiellipsis( $max-lines = 2, $font-size = 16px, $line-height = 1, $bg = white)
  $max-line    = $font-size * $line-height
  $max-height  = $max-line * $max-lines
  overflow      hidden
  position      relative
  font-size     $font-size
  max-height    $max-height
  line-height   $line-height
  &:after, &:before
    width      100%
    position   absolute
    right      0
  &:after
    top        $max-height - $max-line
    height     $max-line
    content    ""
    background linear-gradient(to right, rgba($bg, 0), rgba($bg, 1))
  &:before
    top          $max-height - ($max-line * $line-height)
    color        inherit
    right        0
    content      '\2026'
    z-index      1
    font-size    ($font-size * $line-height) 
    text-align   right
    margin-right 15px
