.video-wrapper 
  height         0
  display        block
  padding        0
  position       relative
  overflow       hidden
  padding-bottom 42.25% 
  iframe
    top      0
    left     0
    width    100%
    border   0
    height   100%
    bottom   0
    position absolute
  
.maps
  height         0
  margin         0 auto
  overflow       hidden
  position       relative
  padding-bottom 75%
  iframe 
    top      0
    left     0
    width    100% !important
    height   100% !important
    position absolute
    