mixin active(activePage)
  header(class="navbar navbar-default navbar-fixed-top" id="navnav" role="banner")
    .container
      .navbar-header
        button(class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false")
          span(class="sr-only") Toggle navigation
          span(class="icon-bar")
          span(class="icon-bar")
          span(class="icon-bar")
        a(class="navbar-brand" href="index.html")
          //- img(src="img/logos/logo.png")
          | Web Boilerplate

      nav(class="collapse navbar-collapse" id="navbar-collapse" role="navigation")
        ul(class="nav navbar-nav navbar-right")
          each page in pages
            li(class={active : activePage == page.slug})
              a(href=page.link smooth-scroll) #{page.name}
